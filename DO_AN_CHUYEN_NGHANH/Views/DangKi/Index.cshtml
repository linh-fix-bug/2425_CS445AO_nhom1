@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
            <h3 class="text-center mb-4">Đăng Ký</h3>
            <p style="color:red">
                @ViewBag.thongbao
            </p>
            @using (Html.BeginForm("Index", "DangKi", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="tenDangKi" class="form-label">Email</label>
                    <input type="text" class="form-control" id="tenDangKi" name="tenDangKi" placeholder="Nhập tên Email" required />
                </div>
                <div class="mb-3">
                    <label for="matKhau" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="matKhau" name="matKhau" placeholder="Nhập mật khẩu" required />
                </div>
                <div class="mb-3">
                    <label for="matKhau" class="form-label"> Nhập lại mật khẩu</label>
                    <input type="password" class="form-control" id="matKhau" name="nhapLaiMatKhau" placeholder="Nhập lại mật khẩu" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                </div>
                <div class="text-center mt-3">
                    <p>Bạn hãy đăng nhập ở đây</p>
                    <a href="@Url.Action("Index", "Login")" class="text-decoration-none">Đăng nhập</a>
                </div>
            }
        </div>
    </div>
</body>
</html>