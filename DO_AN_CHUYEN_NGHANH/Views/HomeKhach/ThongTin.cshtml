@model DO_AN_CHUYEN_NGHANH.Models.KhachHang
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thông tin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
        <div class="form-horizontal">
            <h4>Điền thông tin</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

            <!-- Họ và tên -->
            <div class="form-group row">
                <label for="HoVaTen" class="col-md-2 col-form-label">Họ và tên:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoVaTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoVaTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group row">
                <label for="SoDienThoai" class="col-md-2 col-form-label">Số điện thoại:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Quê quán -->
            <div class="form-group row">
                <label for="QueQuan" class="col-md-2 col-form-label">Quê quán:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.QueQuan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.QueQuan, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Giới tính -->
            <div class="form-group row">
                <label for="GioiTinh" class="col-md-2 col-form-label">Giới tính:</label>
                <div class="col-md-10">
                    <select id="GioiTinh" name="GioiTinh" class="form-control">
                        <option value="">Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span class="text-danger">@ViewData["GioiTinhError"]</span>
                </div>
            </div>

            <div class="form-group row">
                <label for="TenTaiKhoan" class="col-md-2 col-form-label">Email tài khoản của bạn:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>       
            <div class="form-group row">
                <label for="PhongDat" class="col-md-2 col-form-label">Tên phòng bạn muốn đặt:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhongDat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhongDat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-12 mb-3">
                <label class="form-label"><h2>Thanh toán tiền phòng qua Mã QR</h2></label>
                <div>
                    <img src="~/images/maQR.png" class="image-preview" alt="Ảnh Khách Hàng" />
                </div>
            </div>

            <!-- Mục Thêm Ảnh -->
            <div class="col-md-8 mb-3">
                <label for="HinhAnh" class="form-label">Gửi Bill tại đây:</label>
                <input type="file" name="HinhAnh" class="form-control" />
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>

            <!-- Nút Submit -->
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input href="javascript:void(0)" type="submit" value="Đặt phòng" class="btn btn-primary" onclick="thongbao()" />
                    <script>
                        function thongbao() {
                          alert(@Html.Raw(Json.Encode(ViewBag.thongbao)));
                        }
                    </script>
                </div>

            </div>

        </div>
        }

        <div>
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
</body>
</html>