@model DO_AN_CHUYEN_NGHANH.Models.Phong

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Thêm Phòng</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Thêm Phòng Mới</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <!-- Mã Phòng -->
                        <div class="col-md-6">
                            <label for="MaPhong" class="form-label">Mã Phòng</label>
                            @Html.EditorFor(model => model.MaPhong, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.MaPhong, "", new { @class = "text-danger" })
                        </div>

                        <!-- Hình Ảnh -->
                        <div class="col-md-6">
                            <label for="HinhAnh" class="form-label">Hình Ảnh</label>
                            @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                        </div>

                        <!-- Mô Tả -->
                        <div class="col-md-6">
                            <label for="MoTa" class="form-label">Mô Tả</label>
                            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>

                        <!-- Tình Trạng -->
                        <div class="col-md-6">
                            <label for="TinhTrang" class="form-label">Tình Trạng</label>
                            @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                        </div>

                        <!-- Ghi Chú -->
                        <div class="col-md-6">
                            <label for="GhiChu" class="form-label">Ghi Chú</label>
                            @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                        </div>

                        <!-- Giá -->
                        <div class="col-md-6">
                            <label for="Gia" class="form-label">Giá</label>
                            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                        </div>

                        <!-- Tầng -->
                        <div class="col-md-6">
                            <label for="Tang" class="form-label">Tầng</label>
                            <select class="form-select" asp-for="Tang" name="Tang">
                                @foreach (var item in new DO_AN_CHUYEN_NGHANH.Models.MapTang().dsTang())
                                {
                                    <option value="@item.SoTang">@item.SoTang</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(model => model.Tang, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                        @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
