@model List<DO_AN_CHUYEN_NGHANH.Models.Phong>
@{
    ViewBag.Title = "Timkiem";
    Layout = "~/Views/Shared/LayoutKhachVangLai.cshtml";
}
<section class="furniture_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Quản Lý Phòng Trọ
            </h2>
            <p>
                Dễ dàng quản lý thông tin phòng trọ, tình trạng thuê, giá cả và các tiện ích liên quan.
            </p>
        </div>
        <form action="~/Home/Timkiem" method="get">
            <div class="filter-dropdown">
                <label for="floor-filter">Lọc:</label>
                <select id="floor-filter" class="form-select" name="idTang">
                    <option value="0">Tất cả</option>
                    @foreach (var item in new DO_AN_CHUYEN_NGHANH.Models.MapTang().dsTang())
                    {
                        <option value="@item.SoTang" @Html.Raw(item.SoTang == ViewBag.idTang ? "selected" : "")>Tầng @item.SoTang</option>

                    }
                </select>
                <select id="price-filter" class="form-select" name="idGia">
                    <option value="0" @(ViewBag.idGia == null || ViewBag.idGia == 0 ? "selected" : "")>Tất cả giá</option>
                    <option value="1" @(ViewBag.idGia == 1 ? "selected" : "")>1-2 triệu</option>
                    <option value="2" @(ViewBag.idGia == 2 ? "selected" : "")>2-3 triệu</option>
                    <option value="3" @(ViewBag.idGia == 3 ? "selected" : "")>3-4 triệu</option>
                </select>
                <button>Tìm kiếm</button>
            </div>
        </form>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">

                    <div class="box">
                        <div class="img-box">
                            <img src="@item.HinhAnh" alt="Phòng Đơn" />
                        </div>
                        <div class="detail-box">
                            <p><strong>Mã Phòng: </strong>@item.MaPhong</p>
                            <p><strong>Mô Tả: </strong>@item.TenPhong</p>
                            <p><strong>Tình Trạng: </strong>@item.TinhTrang</p>
                            <p><strong>Ghi Chú: </strong>@item.GhiChu</p>
                            <p><strong>Tầng: </strong>@item.Tang</p>
                            <p><strong>Giá phòng: </strong>@item.Gia</p>
                            <div class="price_box">
                                <a href="">
                                    Chi Tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>







<section class="client_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container">
            <h2>
                Đánh Giá Khách Hàng
            </h2>
        </div>
        <div id="carouselExample2Controls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-md-11 col-lg-10 mx-auto">
                            <div class="box">
                                <div class="img-box">
                                    <img src="images/client.jpg" alt="" />
                                </div>
                                <div class="detail-box">
                                    <div class="name">
                                        <i class="fa fa-quote-left" aria-hidden="true"></i>
                                        <h6>
                                            Nguyễn Văn A
                                        </h6>
                                    </div>
                                    <p>
                                        Tôi rất hài lòng với hệ thống quản lý phòng trọ. Giao diện thân thiện, dễ sử dụng và giúp tôi theo dõi công việc hàng ngày dễ dàng hơn.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-md-11 col-lg-10 mx-auto">
                            <div class="box">
                                <div class="img-box">
                                    <img src="images/client.jpg" alt="" />
                                </div>
                                <div class="detail-box">
                                    <div class="name">
                                        <i class="fa fa-quote-left" aria-hidden="true"></i>
                                        <h6>
                                            Trần Thị B
                                        </h6>
                                    </div>
                                    <p>
                                        Hệ thống giúp tôi tiết kiệm rất nhiều thời gian quản lý và giảm thiểu các sai sót trong việc tính toán chi phí thuê phòng.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-md-11 col-lg-10 mx-auto">
                            <div class="box">
                                <div class="img-box">
                                    <img src="images/client.jpg" alt="" />
                                </div>
                                <div class="detail-box">
                                    <div class="name">
                                        <i class="fa fa-quote-left" aria-hidden="true"></i>
                                        <h6>
                                            Phạm Văn C
                                        </h6>
                                    </div>
                                    <p>
                                        Đội ngũ hỗ trợ rất nhiệt tình và chuyên nghiệp. Tôi cảm thấy yên tâm hơn khi sử dụng dịch vụ quản lý phòng trọ này.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel_btn-container">
                <a class="carousel-control-prev" href="#carouselExample2Controls" role="button" data-slide="prev">
                    <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample2Controls" role="button" data-slide="next">
                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- end client section -->
