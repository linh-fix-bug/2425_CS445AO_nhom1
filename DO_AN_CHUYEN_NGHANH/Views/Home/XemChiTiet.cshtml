@model DO_AN_CHUYEN_NGHANH.Models.Phong
@{
    ViewBag.Title = "Chi Tiết Phòng";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<style>
    .detail-container {
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        width: 80%;
        max-width: 800px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .detail-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .img-section img {
        width: 100%;
        max-width: 300px;
        border-radius: 5px;
        margin-bottom: 20px;
        object-fit: cover;
    }

    .info-section p {
        font-size: 16px;
        line-height: 1.6;
        margin: 5px 0;
    }

        .info-section p strong {
            font-weight: bold;
            color: #333;
        }

    .back-button {
        margin-top: 20px;
        text-align: center;
    }

        .back-button .btn {
            text-decoration: none;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            border: none;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .back-button .btn:hover {
                background-color: #0056b3;
            }
</style>

<div class="detail-container">
    <h2 style="text-align: center; color: #007bff; margin-bottom: 20px;">Chi Tiết Phòng</h2>
    <div class="detail-content">
        <div class="img-section">
            <img src="@Model.HinhAnh" alt="Hình Ảnh Phòng" />
        </div>
        <div class="info-section">
            <p><strong>Mã Phòng:</strong> @Model.MaPhong</p>
            <p><strong>Mô Tả:</strong> @Model.MoTa</p>
            <p><strong>Tình Trạng:</strong> @Model.TinhTrang</p>
            <p><strong>Ghi Chú:</strong> @Model.GhiChu</p>
            <p><strong>Tầng:</strong> @Model.Tang</p>
            <p><strong>Giá Phòng:</strong> @string.Format("{0:N0}", @Model.Gia) VNĐ</p>
        </div>
    </div>
    <div class="back-button">
        <a href="~/Home/Index" class="btn">Quay Lại</a>
    </div>
</div>
